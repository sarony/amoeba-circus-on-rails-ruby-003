<h1>Listing performers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Talent</th>
      <th>Generation number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @performers.each do |performer| %>
      <tr>
        <td><%= performer.name %></td>
        <td><%= performer.talent.name if performer.talent%></td>
        <td><%= performer.generation_number %></td>
        <td><%= link_to 'Show', performer %></td>
        <td><%= link_to 'Edit', edit_performer_path(performer) %></td>
        <td><%= link_to 'Split', split_performer_path(performer) %></td>
        <td><%= link_to 'Destroy', performer, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

